@model UMS.ViewModels.StudentViewModel

@using UMS.Extentions

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Edit - Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(SignInManager.IsSignedIn(User))
{
    <div class="card text-white">
    <div class="card-header bg-primary">Edit Student</div>
    <div class="card-body text-dark">
        <div>
            <form id="studentEditForm" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-2 text-primary">
                        <label asp-for="Student.FirstName"></label>
                    </div>
                    <div class="col-8">
                        <input type="text" class="form-control" placeholder="Enter first Name" asp-for="Student.FirstName" />
                    </div>
                    <span asp-validation-for="Student.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-2 text-primary">
                        <label asp-for="Student.LastName"></label>
                    </div>
                    <div class="col-8">
                        <input type="text" class="form-control mt-2" placeholder="Enter last Name" asp-for="Student.LastName" />
                    </div>
                    <span asp-validation-for="Student.LastName" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-2 text-primary">
                        <label asp-for="Student.DepartmentId"></label>
                    </div>
                    <div class="col-8">
                        <select class="form-select mt-2" asp-for="Student.DepartmentId" asp-items="Model.Departments.ToSelectListItem(Model.Student.DepartmentId)"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2 text-primary">
                        <label asp-for="Student.Semester"></label>
                    </div>
                    <div class="col-8">
                        <input type="text" class="form-control mt-2" placeholder="Enter semester number" asp-for="Student.Semester" />
                    </div>
                    <span asp-validation-for="Student.Semester" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4 offset-2 text-primary">
                        <input type="button" id="studentEditSubmit" class="btn btn-primary form-control mt-2 text-white" value="Submit" />
                    </div>
                    <div class="col-4">
                        <a class="btn btn-dark text-white form-control mt-2" asp-controller="Student" asp-action="Index"><i class="fas fa-arrow-left"></i> &nbsp; Back To List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
}


else
{
    <br />
        <div class="alert alert-danger text-danger" role="alert">Sign in First to continue !</div> 
}

@section Scripts{

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

}