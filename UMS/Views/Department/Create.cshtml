@model Department
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@{
    ViewData["Title"] = "Create - Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if(SignInManager.IsSignedIn(User)) 
{
    <div class="card text-white">
    <div class="card-header bg-primary">Add New Department</div>
    <div class="card-body text-dark">
        <div class="">
            <form id="departmentCreateForm" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-2 text-primary">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input type="text" id="Name" required class="form-control" placeholder="Enter new department name" asp-for="Name"/>
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4 offset-2 text-primary">
                        <input type="button" id="departmentCreateSubmit" class="btn btn-primary form-control mt-2 text-white" value="Submit"/>
                    </div>
                    <div class="col-4">
                        <a class="btn btn-dark text-white form-control mt-2" asp-controller="Department" asp-action="Index"><i class="fas fa-arrow-left"></i> &nbsp; Back To List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    </div>
}
else
{
    <br />
        <div class="alert alert-danger text-danger" role="alert">Sign in First to continue !</div> 
}


@section Scripts{  

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }    

}